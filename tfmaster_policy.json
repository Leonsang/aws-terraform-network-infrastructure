{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "s3:ListAllMyBuckets",
                "glue:*",
                "redshift:*",
                "lambda:*",
                "kinesis:*",
                "dynamodb:*",
                "athena:*",
                "quicksight:*",
                "cloudwatch:*",
                "sns:*",
                "iam:*",
                "kms:*",
                "logs:*",
                "ec2:*"
            ],
            "Resource": "*"
        },
        {
            "Effect": "Allow",
            "Action": [
                "s3:*"
            ],
            "Resource": [
                "arn:aws:s3:::terraform-state-fraud-detection",
                "arn:aws:s3:::terraform-state-fraud-detection/*",
                "arn:aws:s3:::fraud-detection-*",
                "arn:aws:s3:::fraud-detection-*/*"
            ]
        },
        {
            "Effect": "Allow",
            "Action": [
                "dynamodb:CreateTable",
                "dynamodb:DeleteTable",
                "dynamodb:DescribeTable",
                "dynamodb:GetItem",
                "dynamodb:PutItem",
                "dynamodb:DeleteItem"
            ],
            "Resource": "arn:aws:dynamodb:*:*:table/terraform-state-lock"
        },
        {
            "Effect": "Allow",
            "Action": [
                "iam:GetUserPolicy",
                "iam:PutUserPolicy",
                "iam:DeleteUserPolicy",
                "iam:ListAttachedUserPolicies"
            ],
            "Resource": "arn:aws:iam::*:user/TFMaster"
        }
    ]
} 